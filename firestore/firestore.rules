rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write to their own data
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to create SOS alerts
    match /sos/{sosId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
                    request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && 
                    (resource.data.userId == request.auth.uid || 
                    request.resource.data.status == 'completed');
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Allow all users to read safety locations
    match /safetyLocations/{locationId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Allow authenticated users to read all users' data for emergency contact purposes
    match /users/{allUsers=**} {
      allow read: if request.auth != null;
    }
  }
}
